<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mask="http://schemas.android.com/apk/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".counselor.Add_event_counselor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="373dp"
        android:layout_height="585dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/layout_bg"
        android:fadingEdgeLength="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        mask:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="355dp"
            android:layout_height="568dp"
            android:background="@color/bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.47"
            mask:layout_constraintBottom_toBottomOf="parent"
            mask:layout_constraintEnd_toEndOf="parent"
            mask:layout_constraintStart_toStartOf="parent"
            mask:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginStart="17dp"
                android:gravity="center|left"
                android:text="Макс. кол-во участников"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerHours" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:text="Название мероприятия"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:text="Дата проведения мероприятия"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventEditTextTitle" />

            <EditText
                android:id="@+id/eventEditTextTitle"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

<!--
            <com.vicmikhailau.maskededittext.MaskedEditText
                android:id="@+id/ageField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/date_of_birthday"
                android:inputType="date"
                android:minHeight="48dp"
                mask:mask="####-##-##"
                -->
            <com.vicmikhailau.maskededittext.MaskedEditText
                android:id="@+id/eventEditTextDate"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                mask:mask="####-##-##" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="320dp"
                android:layout_height="25dp"
                android:text="Время проведения мероприятия"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventEditTextDate" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginStart="17dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Часы:"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/spinnerHours"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <Spinner
                android:id="@+id/spinnerHours"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginStart="76dp"
                android:layout_weight="1"
                android:contentDescription="spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginEnd="118dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Минуты:"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <Spinner
                android:id="@+id/spinnerMinutes"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginEnd="18dp"
                android:layout_weight="1"
                android:contentDescription="spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:text="Описание"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="0dp"
                android:gravity="center|left"
                android:text="Место проведения"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <EditText
                android:id="@+id/eventEditTextQuantityMax"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginEnd="18dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/spinnerMinutes" />

            <EditText
                android:id="@+id/eventEditTextVenue"
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:layout_marginEnd="18dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventEditTextQuantityMax" />

            <EditText
                android:id="@+id/eventEditTextDescription"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Создать мероприятие"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:text="Направление мероприятия"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventEditTextDescription" />

            <Spinner
                android:id="@+id/spinnerDivision"
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:contentDescription="spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <Button
                android:id="@+id/buttonAddEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:text="Добавить мероприятие"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventEditTextDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>